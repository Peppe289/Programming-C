{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-lm", // math.h (dynamic libs)
                // C standard version
                "-std=c2x", // 2x is last
                "-g", // debug
                /*
                 * Add also -O2 or -O3 or -Os for optimize code.
                 * See: https://stackoverflow.com/a/655390
                 */
                "-O3",
                // take debug info for gprof
                //"-pg",
                "-Wall", // enable full warning
                "-Wextra", // enable extra warning
                "-fstack-usage", // take info of stack usage
                /*
                 * Macro for compiler as debug with GDB.
                 * This help for define preprocessor directive.
                 */
                "-DGDB_DEBUG_VSC",
                "${file}", // current file
                "-o",
                "a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}